<div class="container">
    <div class="row align-items-center">
        <div class="col-12 col-md-6 offset-xl-2 offset-md-1 order-md-2 mb-5 mb-md-0">

            <!-- Image -->
            <div class="text-center">
                <img src="/dashboard/assets/img/illustrations/coworking.svg" alt="..." class="img-fluid">
            </div>

        </div>
        <div class="col-12 col-md-5 col-xl-4 order-md-1 my-5">

            <!-- Heading -->
            <h1 class="display-4 text-center mb-3">
                Password reset
            </h1>

            <!-- Subheading -->
            <p class="text-muted text-center mb-5">
                Setup new password .
            </p>

            <!-- Form -->
            <form>
                <span class="text-secondary small mb-3">
                    Password should contain at least one lowercase letter, one uppercase letter,one digit,one special character
                    (@$!%*?&), 8 characters long
                </span>
                <!-- Email address -->
                <div class="form-group">

                    <!-- Label -->
                    <label class="mt-4">New Password</label>
                    <!-- Input -->
                    <input type="password" id="new_password" class="form-control" placeholder="">

                </div>
                <div class="form-group">
                
                    <!-- Label -->
                    <label>Confirm Password</label>
                    <!-- Input -->
                    <input type="password" id="confirm_password" class="form-control" >
                
                </div>
                <div>
                    <span class="text-success" id="success_message"></span>
                </div>
                <!-- Submit -->
                <button id="password_reset_submit" class="btn btn-lg btn-block btn-primary mb-3">
                    Reset Password
                </button>

                <!-- Link -->
                <div class="text-center">
                    <small class="text-muted text-center">
                        Remember your password? <a href="/login">Log in</a>.
                    </small>
                </div>

            </form>

        </div>
    </div> <!-- / .row -->
</div>